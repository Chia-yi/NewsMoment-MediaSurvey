<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#f3f9ff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">
        <!--Text view for displaying our text -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/imgView"
            android:layout_toStartOf="@+id/imgView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:maxLines="3"
            android:textSize="18dp"
            android:text="Category Text"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="#343434"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/text_view_pubtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/text_view_title"
            android:text="2022/03/2418:06:02"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_view_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@id/text_view_title"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/text_view_pubtime"
            android:layout_toEndOf="@+id/text_view_pubtime" />
        <ImageView
            android:id="@+id/imgView"
            app:srcCompat="@drawable/ic_baseline_downloading_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

